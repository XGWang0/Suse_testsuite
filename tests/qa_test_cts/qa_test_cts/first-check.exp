set ip [ lindex $argv 0 ]
if { $ip == "" } { exit 2 }
set timeout 3

spawn ssh $ip

expect {
        "Are you sure you want to continue connecting (yes/no)?" { send "yes\012" }
        -re "Last login:" { exit 0 }
        timeout { exit 2 }
}


expect { 
        -re "Last login:" { exit 0 }
