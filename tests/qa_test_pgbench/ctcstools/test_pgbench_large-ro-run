#sut_timeout 


CTCS2_DIR=/usr/lib/ctcs2
TCF_DIR=/usr/share/qa/tcf


ABUILD_FS=$(grep '/abuild' /proc/mounts  | awk '{print $3}')
case ${ABUILD_FS} in
    "")
        mkdir -p /abuild
        ABUILD_FS="root"
        ;;
    *)
        echo "[pgbench_large_ro] The filesystem on /abuild is ${ABUILD_FS}"
        ;;
esac

TCF_FILE=${TCF_DIR}/pgbench_large_ro_${ABUILD_FS}.tcf

cat <<EOF > ${TCF_FILE}
timer 5h
fg 1 pgbench-large-ro /usr/share/qa/qa_test_pgbench/pgbench-run.sh -r -s large
wait
EOF

cd $CTCS2_DIR
tools/run  ${TCF_FILE}

