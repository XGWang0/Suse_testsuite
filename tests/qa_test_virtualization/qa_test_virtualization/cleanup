export LANG=C

source /usr/share/qa/qa_internalapi/sh/libqainternal.lib.sh


BACKUP="/tmp/virt_conf/"
function cleanup
{
	
	#check the list
	if ! ls $BACKUP 2>&1 |grep LIST >/dev/null ;then
		
		return

	fi

	rcxinetd stop
	rcdhcpd stop
	rcnamed stop
	rcapache2 stop
	

	#check the user
	TESTUSER=`grep TESTUSER= /usr/share/qa/qa_test_virtualization/shared/standalone|tail -1|sed 's/.*=//;s/"//g'`
	if id $TESTUSER;then
		delUser $TESTUSER || res=1
	fi
	
	#restore orig. files (that were backed up)
	cat "$BACKUP/LIST" | xargs -0 rm -rf
	rm "$BACKUP/LIST"
	
	cp -a "$BACKUP"/* /
	rm -fr "$BACKUP"
	
	cat /tmp/iptables | iptables-restore
	rm /tmp/iptables
	
	BR=`grep ^BR /usr/share/qa/qa_test_virtualization/shared/standalone|tail -1|sed 's/.*=//;s/"//g'|sed "s/'//g"`
	ifconfig $BR down
	brctl delbr $BR
	
	#update resolv conf
	grep -q 'generated by netconfig' /etc/resolv.conf && netconfig -f update

}

cleanup
